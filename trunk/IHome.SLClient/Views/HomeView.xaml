<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:IHome.SLClient"
	xmlns:Custom="http://silverlight.imbob.com.cn/Controls" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:Custom1="http://silverlight.imbob.com.cn"
	mc:Ignorable="d"
	x:Class="IHome.SLClient.HomeView"
	d:DesignWidth="640" d:DesignHeight="480">
	<UserControl.Resources>
		<local:HomeViewModel x:Key="HomeViewModelDataSource" />
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource HomeViewModelDataSource}}">
		<Custom:XTurnRoundGrid x:Name="ITurnGrid" Margin="0">
            <Custom:XTurnRoundGrid.Back>
                <local:RegisterView x:Name="Reg"/>
            </Custom:XTurnRoundGrid.Back>
            <Custom:XTurnRoundGrid.Face>
                <local:LoginView x:Name="Login"/>
            </Custom:XTurnRoundGrid.Face>
            <i:Interaction.Behaviors>
                <Custom1:XDrop />
			</i:Interaction.Behaviors>
		</Custom:XTurnRoundGrid>
	</Grid>
</UserControl>
