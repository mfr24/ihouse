                    <telerik:RadRibbonButton HorizontalAlignment="Left" Text="查询房源" LargeImage="/Images/documentworkspace.png" Size="Large" Command="{Binding MenuCommand}" CommandParameter="{}{type_name:'ILight.IShow.CRM.CustomerQueryView',name:'查看客户',xap_name:'ILight.IShow.CRM.zip'}"/>
                    <telerik:RadRibbonSplitButton HorizontalAlignment="Left" Text="房源跟单" LargeImage="/Images/markasfinal.png" Size="Large">
                        <telerik:RadRibbonSplitButton.DropDownContent>
