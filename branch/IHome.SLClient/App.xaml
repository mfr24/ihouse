<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             x:Class="IHome.SLClient.App" 
             xmlns:model="http://com.ihome.model">
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
    			<ResourceDictionary Source="MainPanelStyle.xaml"/>
    			<ResourceDictionary Source="/IHome.Controls;component/Theme/IHomeControls.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
    		<!--程序全局变量-->
    		<model:AppViewModel x:Key="AppDataSource" />
    		<model:TrueFalseConverter x:Key="TrueFalseConverter" />
            <telerik:Windows7Theme x:Key="Theme" />
        </ResourceDictionary>
  </Application.Resources>
</Application>
