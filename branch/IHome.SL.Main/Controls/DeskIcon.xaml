<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="userControl"
	mc:Ignorable="d"
	x:Class="IHome.SL.Main.DeskIcon">
    <StackPanel x:Name="LayoutRoot" HorizontalAlignment="Center">
    	<StackPanel.Effect>
    		<DropShadowEffect/>
    	</StackPanel.Effect>
        <Border BorderBrush="Black" Height="32" CornerRadius="12" Width="32">
        	<Image x:Name="Icon" Source="{Binding Url, ElementName=userControl}"/>
        </Border>
        <TextBlock x:Name="IconText" Margin="0,2,0,0" FontSize="18" FontWeight="Bold" Text="{Binding Text, ElementName=userControl}"/>
    </StackPanel>
</UserControl>